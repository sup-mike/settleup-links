{
  "rewrites": [
    { "source": "/.well-known/:path*", "destination": "/api/well-known/:path*" },
    { "source": "/auth/callback", "destination": "/api/auth-callback" },
    { "source": "/stripe/:path*", "destination": "/api/stripe/:path*" },
    { "source": "/reset", "destination": "/api/reset" }
  ],
  "redirects": [
    { 
      "source": "/((?!.well-known|auth/callback|stripe).*)", 
      "destination": "https://app.settleup.pro/$1",
      "permanent": false 
    }
  ]
}
